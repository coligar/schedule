datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Schedule{
  id String @id @default(cuid())
  order Int
  day DateTime
  starttime String
  endtime String
  area String
  type String
  user User? @relation(fields: [userId], references: [id])
  userId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model User{
  id String @id @default(cuid())
  email String @unique
  name String
  avatar String
  role Role @default(USER)
  schedules Schedule[]
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}
